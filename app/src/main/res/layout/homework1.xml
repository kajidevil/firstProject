<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/first"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="25.24dp"
        android:background="#e8e8e8"/>

    <ImageView
        android:id="@+id/threeElements"
        android:layout_width="46dp"
        android:layout_height="10.52dp"
        android:src="@drawable/icoons"
        app:layout_constraintTop_toTopOf="@id/first"
        android:layout_marginTop="7.36dp"
        app:layout_constraintRight_toRightOf="@id/first"
        android:layout_marginRight="7dp"
        />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow_back_24px"
        app:layout_constraintTop_toBottomOf="@id/first"
        android:layout_marginTop="17.36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="23dp"
        />
    <TextView
        android:id="@+id/zayavka"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="67dp"
        android:fontFamily="@font/rubik_black"
        android:text="Заявка на дебетную карту"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="260dp"
        android:layout_height="198dp"
        android:src="@drawable/homecard3d"
        app:layout_constraintTop_toBottomOf="@id/zayavka"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="31dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


